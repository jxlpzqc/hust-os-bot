<html>

<head>
  <title>Internal Reviewer Todo Center</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0, user-scalable=no" />
</head>

<body>
  <h1>Todo Center</h1>
  <ul class="list">
    <% items.forEach(u=> { %>
      <li class='item <%- u.complete? ' finished':'' %>'>
        <a class='hyper' href="<%= u.appLink %>">
          <div class="head">
            <%= u.summary %>
          </div>
          <% if(!!u.extra.from) { %>
          <div>
            <b>From:</b> <%= u.extra.from %>
          </div>
          <% } %>
          <% if(!!u.extra.cc) { %>
          <div>
            <b>Cc:</b> <%= u.extra.cc %>
          </div>
          <% } %>
          <% if(!!u.extra.to) { %>
          <div>
            <b>To:</b> <%= u.extra.to %>
          </div>
          <% } %>
          <% if(!!u.extra.date) { %>
          <div>
            <b>Date:</b> <%= u.extra.date %>
          </div>
          <% } %>
          <% if(!!u.complete) { %>
          <div>
            Finished automatically at <%= u.extra.timeStr %>.
          </div>
          <% } %>
          <div class="lint">
            Click to show task in feishu.
          </div>
        </a>
      </li>
    <% }) %>
  </ul>

  <div style="text-align: center;">
    <p>-- ‚ù§ --</p>
    <p>Hust OS Contribution Team</p>
  </div>
  <style>
    li.item {
      margin: 32px auto;
      border: 1px #858585 solid;
      padding: 16px;
      border-radius: 16px;
      max-width: 800px;
      /* margin: auto; */
    }

    ul.list {
      list-style: none;
      padding: 0;
      margin: 0 16px;
    }

    a.hyper {
      color: black;
      text-decoration: none;
    }

    .lint {
      color: #2196F3;
    }

    .head {
      font-weight: bold;
      padding-bottom: 8px;
      margin-bottom: 8px;
      border-bottom: solid 1px black;
    }

    .finished .head {
      text-decoration: line-through #a90f0f 2px;
    }

    .finished .head::before {
      content: "[COMPLETED]";
      color: #a90f0f;
    }

    .finished {
      background: #cecece;
    }

    .hyper div{
      line-break: anywhere;
      -webkit-line-break: anywhere;
    }

    h1 {
      text-align: center;
      margin-top: 32px;
    }
  </style>
</body>

</html>
